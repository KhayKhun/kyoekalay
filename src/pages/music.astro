---
import MainLayout from "../layouts/MainLayout.astro";

import Music from '../image/music.png'

import bg1 from '../image/musicbg1.png'
import bg2 from '../image/musicbg2.png'
import bg3 from '../image/musicbg3.png'
---
<style>
  @import url('https://fonts.googleapis.com/css2?family=Concert+One&family=Dekko&display=swap');
   p{
        font-family: 'Dekko', cursive;
    }
    h2{
        font-family: 'Concert-one',cursive;
    }
  </style>
<MainLayout title="Music">
    <div class="mt-[80px]"/>
    <div>
        <a href="/" class="underline ml-[3vw] text-blue-900 font-semibold">MainPage</a><span> / music</span>
      </div>
    <div class="w-screen relative h-[80px]">
        <div class="absolute bottom-0 bg-white w-screen h-[60px]"></div>
        <img src={Music} class="absolute bg-white top-0 left-[15%] w-[76px] h-[76px] border-[4px] border-white rounded-full"/>
    </div>    
    <div class="flex flex-col gap-3">
        <div class="relative">
            <img src={bg1} class="w-screen h-screen md:h-[120vh]"/>
            <div class="absolute z-[5] top-0 flex justify-center flex-col w-screen h-screen p-[20px] md:p-[50px] lg:p-[90px]">
            <h2 class="text-[25px] md:text-[35px] lg:text-[48px] font-bold mx-auto mb-[30px] md:my-[60px]">Calming and soothing music</h2>
            <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://www.youtube.com/watch?v=n-pwPIRW9fY">“Piano Sonata No. 14 in C-sharp minor"</a>
                     by Ludwig van Beethoven
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/Bf_oa4M8BpA">"Sparks"</a>
                     by Röyksopp
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/TJ6Mzvh3XCc">"Spiegel im Spiegel"</a>
                     by Arvo Pärt
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/8BIeaktwMsM">"The Blue Planet"</a>
                     by Hans Zimmer
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/S-Xm7s9eGxU">"Gymnopédie No. 1"</a>
                     by Erik Satie
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/CvFH_6DNRCY">"Clair de Lune"</a>
                     by Claude Debussy
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/UfcAVejslrU">"Weightless"</a>
                     by Marconi Union
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/aS41f-yM4M8">"Weightless Part 2"</a>
                     by Marconi Union
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/LTrk4X9ACtw">"Orinoco Flow"</a>
                     by Enya
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/TZCfydWF48c">"The Four Seasons, Winter"</a>
                     by Antonio Vivald
                </p>
            </div>
        </div>
        <!--  -->
        <div class="relative">
            <img src={bg2} class="w-screen h-screen md:h-[120vh]"/>
            <div class="absolute z-[5] top-0 flex justify-center flex-col w-screen h-screen p-[20px] md:p-[50px] lg:p-[90px]">
            <h2 class="text-[25px] md:text-[35px] lg:text-[48px] font-bold mx-auto mb-[30px] md:my-[60px]">Music with positive lyrics</h2>
            <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/QUQsqBqxoR4">"Brave"</a>
                     by Sara Bareilles
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/g6aXBdrQE14">"bHappy"</a>
                      by Pharrell Williams
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/ihUF8pbphbk">“I Will Survive"</a>
                     by Gloria Gaynor
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/nfWlot6h_JM">"Shake It Off"</a>
                     by Taylor Swift
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/1k8craCGpgs">"Don't Stop Believin'"</a>
                     by Journey
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/CevxZvSJLk8">"Roar"</a>
                     by Katy Perry
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/Xn676-fLq7I">"Stronger"</a>
                     by Kelly Clarkson
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/eAfyFTzZDMM">"Beautiful"</a>
                     by Christina Aguilera
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/jZhQOvvV45w">"Good Life"</a>
                     by One Republic
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/btPJPFnesV4">"Eye of the Tiger"</a>
                     by Survivor
                </p>
            </div>
        </div>
        <!--  -->
        <div class="relative">
            <img src={bg3} class="w-screen h-screen md:h-[120vh]"/>
            <div class="absolute z-[5] top-0 flex justify-center flex-col w-screen h-screen p-[20px] md:p-[50px] lg:p-[90px]">
            <h2 class="text-[25px] md:text-[35px] lg:text-[48px] font-bold mx-auto mb-[30px] md:my-[60px]">Music that reflects emotion</h2>
            <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/z7GCiVTlv04">“Someone Like You"</a>
                     by Adele
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/5rOiW_xY-kc">"Everybody Hurts"</a>
                     by R.E.M.
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/wlJvpeDbpfU">"Say You Love Me"</a>
                     by Jessie Ware
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/NRhmmqsZIpw">"All I Want"</a>
                     by Kodaline
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/GKtXVpnsaGE">"Yesterday"</a>
                     by The Beatles
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/DAMM8JVbr8g">"Say You Love Me"</a>
                     by Jessie Ware
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/k4V3Mo61fJM">"Fix You"</a>
                     by Coldplay
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/GemKqzILV4w">"Chasing Cars"</a>
                     by Snow Patrol
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/95FyXUHv8hk">"Skinny Love"</a>
                     by Bon Iver
                </p>
                <p class="text-[16px] sm:text-[21px] md:text-[25px] sm:my-[2.8px]">
                    <a class="underline" href="https://youtu.be/2ZFka5_8itM">"Human"</a>
                     by Christina Perri
                </p>
            </div>
        </div>
    </div>
</MainLayout>